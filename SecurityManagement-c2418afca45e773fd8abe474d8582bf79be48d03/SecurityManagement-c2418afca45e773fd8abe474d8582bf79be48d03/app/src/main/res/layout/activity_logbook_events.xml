<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.oryossipof.securitymanagement.AddEventAct"
    android:orientation="vertical"
    android:gravity="left"
    android:background="@drawable/notebookimage"

    >


    <ImageView android:src="@drawable/logbookimage"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"

        />

    <ListView

        android:id="@+id/lv_msglist"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:dividerHeight="1dp"
        android:layoutDirection="ltr"


        />
    >
    <TextView
        android:id="@+id/emptyElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="NO MESSAGES AVAILABLE!"
        android:textColor="#525252"
        android:textSize="19.0sp"
        android:visibility="gone" />


    <LinearLayout

        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        >

        <Button
            android:id="@+id/exitBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit" />


    <Button
    android:id="@+id/addEventBT"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Add Event" />





    </LinearLayout>
</LinearLayout>