<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:layout_gravity="right"
    android:gravity="left"


    >


    <RelativeLayout
        android:layout_gravity="left"
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">


        <TextView
            android:gravity="left"
            android:id="@+id/dateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="TextView"
            android:textColor="#0000FF"
            android:textStyle="bold"

            />

        <TextView
            android:gravity="left"
            android:id="@+id/handsOnNumText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/peopleNumberText"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="12dp"
            android:text="#Hands:"
            android:textColor="#000"


            />


        <TextView android:gravity="left"
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/handsOnNumText"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="12dp"
        android:text="Status:"
        android:textColor="#000"


        />

        <TextView
            android:gravity="left"
            android:id="@+id/totalPayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statusText"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="12dp"
            android:text="Total Payment:"
            android:textColor="#000"
            android:textStyle="bold"

            />


        <TextView
            android:gravity="left"
            android:id="@+id/peopleNumberText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#People (Without Stuff):"
            android:textColor="#000"


            android:layout_below="@+id/dateTextView"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</LinearLayout>
